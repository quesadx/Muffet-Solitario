                     </padding>
                  </Label>
                  <VBox alignment="CENTER" spacing="2.0" styleClass="jfx-container">
                     <children>
                        <MFXTextField fx:id="txfUser" floatingText="NOMBRE DE USUARIO" prefWidth="500.0" />
                        <MFXTextField fx:id="txfCurrentFavoriteWord" floatingText="PALABRA FAVORITA" prefWidth="500.0" />
                        <HBox spacing="2.0">
                           <children>
                              <MFXPasswordField fx:id="psfNewPassword" floatingText="NUEVA CLAVE" hideCharacter="x" prefWidth="250.0" />
                              <MFXPasswordField fx:id="psfNewConfirmPassword" floatingText="CONFIRMAR CLAVE" hideCharacter="x" prefWidth="250.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="2.0">
                           <children>
                              <MFXButton fx:id="btnCancel" onAction="#onActionBtnCancel" prefWidth="250.0" text="CANCELAR" />
                              <MFXButton onAction="#onActionBtnConfirmPasswordReset" prefWidth="250.0" text="REESTABLECER" />
