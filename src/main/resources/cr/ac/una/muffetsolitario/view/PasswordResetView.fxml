                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox fx:id="vboxPasswordUpdated" alignment="CENTER" styleClass="jfx-transparent-container" visible="false">
               <children>
                  <VBox alignment="TOP_CENTER" maxHeight="250.0" maxWidth="500.0" prefHeight="250.0" prefWidth="500.0" styleClass="jfx-container">
                     <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="10.0" />
                     </padding>
                     <children>
                        <Label maxHeight="1.7976931348623157E308" styleClass="jfx-subtitle-2" text="CAMBIO REALIZADO" />
