<AnchorPane id="AnchorPane" fx:id="root" prefHeight="600.0" prefWidth="1000.0" minHeight="400.0" minWidth="600.0" maxHeight="800.0" maxWidth="1200.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.muffetsolitario.controller.HelpController">
   <children>
      <ImageView fx:id="imgBackground" fitHeight="600.0" fitWidth="1000.0" pickOnBounds="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
