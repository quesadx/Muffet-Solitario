                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
            <VBox fx:id="vboxMissingFieldsAlert" alignment="CENTER" styleClass="jfx-transparent-container" visible="false">
